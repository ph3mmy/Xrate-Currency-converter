<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sim_grey"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@color/white"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_rate_country"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="5dp"
        android:layout_weight="0.1"
        android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1">

        <TextView
            android:id="@+id/tv_rate_currency_symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="2dp"
            android:textColor="@color/cardview_dark_background"
            android:text="afn"
            android:textAllCaps="true"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:id="@+id/tv_rate_currency_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dollars"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>

        <LinearLayout
            android:id="@+id/rate_base_inv_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="end"
            android:layout_marginRight="5dp"
            android:layout_marginEnd="5dp"
            android:layout_weight="0.7">

        <TextView
            android:id="@+id/tv_inv_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:textSize="14sp"
            android:textColor="#888"
            android:text="1 AFN = 0.10 USD"
            android:textAllCaps="true"
            />

        <TextView
            android:id="@+id/tv_base_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1 USD = 10 AFN"
            android:textSize="14sp"
            android:textColor="#888"
            android:textAllCaps="true"/>
    </LinearLayout>
        </LinearLayout>

</LinearLayout>