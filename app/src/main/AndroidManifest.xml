<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcedar.xratecurrencyconverter" >

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Gardener" >

        <provider
            android:authorities="com.jcedar.xratecurrencyconverter.provider"
            android:name="com.jcedar.xratecurrencyconverter.provider.DataProvider"
            android:syncable="true"
            android:exported="false"/>
        <activity
            android:name=".ui.MainActivity"
            android:windowSoftInputMode="stateHidden"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".provider.AndroidDatabaseManager"/>
    </application>

</manifest>
